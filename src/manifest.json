{
  "manifest_version": 3,
  "name": "SEI Tools Base",
  "version": "1.0",
  "description": "Base de Desenvolvimento de Extens√µes SEI",
  
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "native_resources",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "css": ["preload.css", "styles/main.css"],
      "js": ["js/preload.min.js"],
      "matches": ["https://sei.mj.gov.br/*"],
      "run_at": "document_start"
    },
    {
      "js": ["js/onload.min.js"],
      "matches": ["https://sei.mj.gov.br/*"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ 
        "index.html",
        "js/main.min.js"
      ],
      "matches": ["https://sei.mj.gov.br/*"]
    }
  ]
}